<form method="post" action="{{ path('event_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button  class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm"> <i class="fas fa-remove fa-sm text-white-50"></i> Delete</button>


</form>