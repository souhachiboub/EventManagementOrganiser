{% extends 'base.html.twig' %}

{% block title %}New Event{% endblock %}

{% block body %}
    <h1>Create new Event</h1>

    {{ form_start(form) }}
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
    
      {{ form_row(form.title, {'attr': {'class': 'form-control form-control-user' ,'placeholder':'Title'}}) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.location, {'attr': {'class': 'form-control form-control-user' ,'placeholder':'Location Date'}}) }}
        </div>
    </div>
    <p>Start Date</p>
    <div class="row">
    
        <div class="col-sm">
    
         {{ form_widget(form.beginAt.date.day, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
    
        <div class="col-sm">
    
        {{ form_widget(form.beginAt.date.month, {'attr': {'class': 'form-control form-control-user'}}) }}
                </div>
        <div class="col-sm">
        {{ form_widget(form.beginAt.date.year, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
        <div class="col-sm">
        {{ form_widget(form.beginAt.time.hour, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
        <div class="col-sm">
        {{ form_widget(form.beginAt.time.minute, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
    </div>
    <hr>
    <p>End Date</p>
    <div class="row">
    
        <div class="col-sm">
    
    
            {{ form_widget(form.endAt.date.day, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
        <div class="col-sm">
            {{ form_widget(form.endAt.date.month, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
        <div class="col-sm">
            {{ form_widget(form.endAt.date.year, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
        <div class="col-sm">
            {{ form_widget(form.endAt.time.hour, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
        <div class="col-sm">
            {{ form_widget(form.endAt.time.minute, {'attr': {'class': 'form-control form-control-user'}}) }}
        </div>
    </div>
    <hr>
    <button type="submit" class="btn btn-primary btn-user btn-block">{{ button_label|default('Save') }}</button>
    
    
    {{ form_end(form) }}
{% endblock %}