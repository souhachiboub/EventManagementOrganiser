                <div class="card bg-light mb-3 mt-3">
                    <div class="card-body">
                        <div class="card-header">List of top technology companies</div>
                        {% if app.user != null %}
                            <table class="table">
                                <tr>
                                    <th>Company Name</th>
                                    <th>Market Value</th>
                                </tr>
                                {% for key, item in companies %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td>{{ item }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        {% endif %}
                    </div>
                </div>



